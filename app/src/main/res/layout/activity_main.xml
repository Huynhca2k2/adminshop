                        android:textAlignment="center"
                        android:textColor="@color/black2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/prodManagerBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="0.25"
